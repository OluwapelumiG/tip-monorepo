{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "dotenv -e ../../.env -- tsdown",
    "check-types": "tsc -b",
    "compile": "dotenv -e ../../.env -- bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "dotenv -e ../../.env -- bun run --hot src/index.ts",
    "start": "dotenv -e ../../.env -- bun run dist/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.995.0",
    "@illtip/api": "workspace:*",
    "@illtip/auth": "workspace:*",
    "@illtip/db": "workspace:*",
    "@illtip/env": "workspace:*",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "fluent-ffmpeg": "^2.1.3",
    "hono": "^4.8.2",
    "sharp": "^0.34.5",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@illtip/config": "workspace:*",
    "@types/bun": "catalog:",
    "@types/fluent-ffmpeg": "^2.1.28",
    "tsdown": "^0.16.5",
    "typescript": "catalog:"
  }
}
