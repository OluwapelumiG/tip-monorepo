{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "dotenv -e ../../.env -- tsdown",
    "check-types": "tsc -b",
    "compile": "dotenv -e ../../.env -- bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "dotenv -e ../../.env -- bun run --hot src/index.ts",
    "start": "dotenv -e ../../.env -- bun run dist/index.js"
  },
  "dependencies": {
    "@illtip-monorepo/api": "workspace:*",
    "@illtip-monorepo/auth": "workspace:*",
    "@illtip-monorepo/db": "workspace:*",
    "@illtip-monorepo/env": "workspace:*",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "^4.8.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@illtip-monorepo/config": "workspace:*",
    "@types/bun": "catalog:",
    "tsdown": "^0.16.5",
    "typescript": "catalog:"
  }
}
