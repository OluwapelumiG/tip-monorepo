{
  "name": "illtip-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "@prisma/client": "^7.2.0",
      "@orpc/tanstack-query": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@tanstack/react-query": "^5.90.12",
      "@better-auth/expo": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @illtip-monorepo/db db:push",
    "db:studio": "turbo -F @illtip-monorepo/db db:studio",
    "db:generate": "turbo -F @illtip-monorepo/db db:generate",
    "db:migrate": "turbo -F @illtip-monorepo/db db:migrate"
  },
  "dependencies": {
    "@illtip-monorepo/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@illtip-monorepo/config": "workspace:*",
    "@types/bun": "catalog:",
    "dotenv-cli": "^11.0.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.2.23"
}
